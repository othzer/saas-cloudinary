datasource db {
  provider = "postgresql"
}


//defining the video model
model Video{
  id String @id @default(cuid())    //@id to make it the primary key and @default(cuid()) to generate a unique id for each video
  title String
  description String?
  publicId String
  originalSize String
  compressedSize String
  duration Float
  createdAt DateTime @default(now())
}
